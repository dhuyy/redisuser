<h1>{{user.first_name}} {{ user.last_name }} [{{ user.id }}]</h1>
<ul class="list-group">
  <li>
    <strong>Email: </strong>
    {{ user.email }}
  </li>
  <li>
    <strong>Phone: </strong>
    {{ user.phone }}
  </li>
</ul>
<div class="form-inline">
  <a href="/" class="btn btn-primary pull-left">Back</a>
  <form action="/user/delete/{{user.id}}?_method=DELETE" method="POST">
    <input type="submit" class="btn btn-danger pull-right" value="Delete">
  </form>
</div>
